<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lista_imagen_vehiculo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/marca_vehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lista_imagen_vehiculo"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/modelo_vehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marca_vehiculo"
            android:layout_toEndOf="@id/lista_imagen_vehiculo"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imagen_favorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/marca_vehiculo"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"/>

    </RelativeLayout>

</LinearLayout>