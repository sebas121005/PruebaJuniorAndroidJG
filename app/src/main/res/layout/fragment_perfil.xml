<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.perfil.PerfilFragment"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/perfil_imagen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/fotoprueba"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/txt_cc_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/perfil_imagen"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/cc"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/cc_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_cc_perfil"
            android:layout_marginStart="30dp"
            android:layout_below="@id/perfil_imagen"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cc_perfil"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/nombre"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_nombre_perfil"
            android:layout_marginStart="30dp"
            android:layout_below="@id/cc_perfil"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_contrasena_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nombre_perfil"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/contrasena"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/contrasena_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_contrasena_perfil"
            android:layout_marginStart="30dp"
            android:layout_below="@id/nombre_perfil"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_ubicacion_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contrasena_perfil"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/ubicacion"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ubicacion_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_contrasena_perfil"
            android:layout_marginStart="30dp"
            android:layout_below="@id/contrasena_perfil"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/tomar_ubicacion_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ubicacion_perfil"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/txt_ubicacion_perfil"
            android:layout_marginStart="20dp"
            android:src="@drawable/gps"/>


    </RelativeLayout>

</LinearLayout>